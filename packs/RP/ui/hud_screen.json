	//---------------------------------------------------------------------------
	// Vanilla Modifications
	//---------------------------------------------------------------------------

	"hud_title_text": {
		"modifications": [
			{
				"array_name": "bindings",
				"operation": "insert_front",
				"value": [
					{
						"binding_type": "global",
						"binding_name": "#hud_title_text_string",
						"binding_name_override": "#text"
					}
				]
			},
			{
				"array_name": "bindings",
				"operation": "insert_back",
				"value": [
					{
						"binding_type": "view",
						"source_property_name": "(not ('%.6s' * #text = '_r4ui:'))",
						"target_property_name": "#visible"
					}
				]
			}
		]
	},

	"root_panel": {
		"size": ["100%", "100%"],

		"modifications": [
			{
				"array_name": "controls",
				"operation": "insert_front",
				"value": [
					{
						"waila@common.empty_panel": {
							"$anchor": "center",
							"anchor_from": "$anchor",
							"anchor_to": "$anchor",

							"size": ["100%", "100%"],
							"offset": [0, 0],

							"factory": {
								"name": "hud_title_text_factory",
								"control_ids": {
									"hud_title_text": "disp@r4isen1920_waila_main.centerer"
								}
							}
						}
					}
				]
			}
		]
	}
}
